{
	"type": "mongodb",
	"mongodb": {
		"servers": [{ 
			host: "localhost",
			port: "27017"
		}],
		"options": {
			"connect_timeout": 11000,
			"secondary_read_preference": true,
			"include_collection": "mycollection",
			"advanced_transformation": true,
			"parent_types": ["parent1", "parent2"]
		},
		"credentials": [{
			db: "admin",
			user: "admin",
			password: "secret"
		}],
		db: "mydatabase",
		collection: "mycollection",
		gridfs: "false"
	},
	index: {
		name: "myindex",
		throttle_size: 2000,
		bulk: {
			actions: 500,
			size: "20mb",
			concurrent_requests: 40,
			flush_interval: "50ms"
		}
	}
}